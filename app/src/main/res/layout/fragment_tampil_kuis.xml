<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menu_submenua3"
    tools:context=".Boundary.TampilKuisFrag">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center">
      <Button
          android:id="@+id/btn_kuis_hewan"
          android:layout_width="150dp"
          android:layout_height="100dp"
          android:background="@drawable/btn_kuis_hewan"
          android:layout_marginRight="17dp"/>
      <Button
          android:id="@+id/btn_kuis_huruf"
          android:layout_width="150dp"
          android:layout_height="100dp"
          android:background="@drawable/btn_kuis_huruf"/>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_kuis_angka"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_kuis_angka"
            android:layout_marginRight="17dp"/>
        <Button
            android:id="@+id/btn_kuis_anggotatubuh"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_kuis_anggotatubuh"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_kuis_warna"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_kuis_warna"
            android:layout_marginRight="17dp"/>
        <Button
            android:id="@+id/btn_kuis_transportasi"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_kuis_transportasi"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_kuis_benda"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_kuis_benda"
            android:layout_marginRight="17dp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>